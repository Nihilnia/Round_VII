@model List<Category>


@{
    ViewData["Title"] = "Index";
}

<h3 id="eyy">@TempData["gloria"]</h3>

<h1>Index</h1>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>

        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i>
                Create New Category
            </a>
        </div>
    </div>
</div>

<table class = "table table-bordered table-striped ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Display Order</th>
            <th>Created Date Time</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.ID</td>
                <td>@f.Name</td>
                <td>@f.DisplayOrder</td>
                <td>@f.CreatedDateTime</td>
                <td>
                    <div class="w-75 btn-group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@f.ID"><button type="button" class="btn btn-warning">Edit</button></a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@f.ID"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>